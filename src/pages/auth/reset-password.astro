---
import Layout from "../../layouts/Layout.astro";
import ResetPasswordForm from "../../components/auth/ResetPasswordForm";
import AuthHeader from "../../components/auth/AuthHeader";
---

<Layout title="Reset Password | Flashcards">
  <main class="min-h-screen flex flex-col items-center justify-center bg-gray-50">
    <div class="w-full max-w-md px-6 py-8 bg-white rounded-lg shadow-md">
      <AuthHeader client:load />
      <div class="mb-6 text-center">
        <h2 class="text-xl font-semibold text-gray-900">Reset your password</h2>
        <p class="mt-2 text-sm text-gray-600">
          Enter your email address and we'll send you a link to reset your password.
        </p>
      </div>
      <ResetPasswordForm client:load />

      <div class="mt-4 text-center text-sm text-gray-600">
        Remember your password?
        <a href="/auth/login" class="text-primary hover:underline ml-1"> Sign in </a>
      </div>
    </div>
  </main>
</Layout>
